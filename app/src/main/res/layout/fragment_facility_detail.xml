<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.health.vaccinefinder.DialogFragment.FacilityDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Region : Ashanti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tctFacilityName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tctregion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:layout_margin="1dp" />

    <TextView
        android:text="District : Adansi North"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tctregion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtDistrict"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:layout_margin="1dp" />

    <TextView
        android:text="SubDistrict : Aboabo(Ashanti)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDistrict"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tctSubdistrict"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:layout_margin="1dp" />

    <TextView
        android:text="Facility Center "
        android:layout_width="match_parent"
        android:id="@+id/tctFacilityName"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:layout_margin="1dp"
        android:textSize="18sp" />

    <TextView
        android:text="Phone : 02000002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tctSubdistrict"
        android:layout_alignLeft="@+id/tctSubdistrict"
        android:layout_alignStart="@+id/tctSubdistrict"
        android:id="@+id/txtphone"
        android:layout_alignRight="@+id/tctSubdistrict"
        android:layout_alignEnd="@+id/tctSubdistrict"
        android:layout_margin="1dp"
        android:padding="2dp" />

    <TextView
        android:text="Email : email@email.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtphone"
        android:layout_alignLeft="@+id/txtphone"
        android:layout_alignStart="@+id/txtphone"
        android:id="@+id/txtemail"
        android:layout_alignRight="@+id/txtphone"
        android:layout_alignEnd="@+id/txtphone"
        android:layout_margin="1dp"
        android:padding="2dp" />

    <TextView
        android:text="Distance : 400 miles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtemail"
        android:layout_alignLeft="@+id/txtemail"
        android:layout_alignStart="@+id/txtemail"
        android:id="@+id/txtmiles"
        android:layout_alignRight="@+id/txtemail"
        android:layout_alignEnd="@+id/txtemail"
        android:layout_margin="1dp"
        android:padding="2dp"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="Services Offered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtservices"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:padding="2dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/txtmiles"
        android:layout_alignLeft="@+id/txtemail"
        android:layout_alignStart="@+id/txtemail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Schedule Appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butReservation"
        android:layout_below="@+id/txtmiles"
        android:layout_alignRight="@+id/txtmiles"
        android:layout_alignEnd="@+id/txtmiles"
        android:layout_alignLeft="@+id/txtmiles"
        android:layout_alignStart="@+id/txtmiles" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/tctSubdistrict"
        android:layout_alignStart="@+id/tctSubdistrict"
        android:layout_below="@+id/txtservices"
        android:id="@+id/servicesOff" />

</RelativeLayout>
